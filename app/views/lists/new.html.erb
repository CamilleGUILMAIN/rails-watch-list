<div class="container mt-4">
  <h1 class="text-center mb-4">Create de new list</h1>

<div class="card p-4 shadow-sm">
  <%= simple_form_for(@list) do |f| %>
    <div class="mb-3">
      <%= f.input :name %>
    </div>
    <div class="d-flex justify-content-between">
      <%= f.submit %>
      <%=link_to "Back to lists", lists_path%>
    </div>
  <% end %>
</div>

</div>
