<div class="container">
  <h1 class="text-center mb-4"><%= @list.name %></h1>

  <div class="mb-4 text-center">
    <%= link_to "Create a Bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  </div>

  <h2>Movies</h2>
  <% @bookmarks.each do |bookmark| %>
    <div class="card mb-3 shadow-sm">
      <div class="row g-0">
        <div class="col-md-3">
          <img src="<%= bookmark.movie.poster_url %>" alt="poster" class="img-fluid rounded-start">
        </div>
        <div class="col-md-9">
          <div class="card-body">
            <h3 class="card-title"><%= bookmark.movie.title %></h3>
            <p class="card-text"><%= bookmark.movie.overview %></p>
            <p class="card-text"><small class="text-muted">Avis : <%= bookmark.comment %></small></p>
            <%= link_to "Delete", bookmark_path(bookmark), class: "btn btn-danger btn-sm", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= link_to "Back to Lists", lists_path, class: "btn btn-secondary" %>
  </div>
</div>
