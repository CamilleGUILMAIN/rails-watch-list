<div class="container">
  <h1 class="text-center mb-4"><%= @list.name %></h1>

  <div class="mb-4 text-center">
    <%= link_to "Create a Bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  </div>

  <h2>Movies</h2>
  <% @bookmarks.each do |bookmark| %>
      <div class="card-product-movies">
        <%= image_tag bookmark.movie.poster_url %>
        <div class="card-product-infos">
          <h2><%= bookmark.movie.title %></h2>
          <p><%= bookmark.movie.overview %></p>
          <p><small class="text-muted">Avis : <%= bookmark.comment %></small></p>
          <%= link_to "Delete", bookmark_path(bookmark), class: "btn btn-danger btn-sm", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </div>
      </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= link_to "Back to Lists", lists_path, class: "btn btn-secondary" %>
  </div>
</div>
