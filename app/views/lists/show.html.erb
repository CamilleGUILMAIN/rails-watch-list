<div class="container">

  <h1><%=@list.name %></h1>
  <%=link_to "Create a bookmarks", new_list_bookmark_path(@list)%>

  <h2>Movies: </h2>
  <% @bookmarks.each do |bookmark| %>
    <img src=<%=bookmark.movie.poster_url%> alt="poster">
    <div class="d-flex justify-content-between">
      <h3><%= bookmark.movie.title %></h3>
      <div>
        <%= link_to "Delete",
        bookmark_path(bookmark),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %>
      </div>
    </div>
    <p><%= bookmark.movie.overview %></p>
    <p>Avis : <%= bookmark.comment %></p>

    <div>
      <%= link_to "Delete",
      bookmark_path(bookmark),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </div>
  <% end %>

  <%=link_to "Back to lists", lists_path%>
</div>
